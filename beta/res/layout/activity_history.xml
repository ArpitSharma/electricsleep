<?xml version="1.0" encoding="utf-8"?>
<com.androsz.electricsleepbeta.widget.FlingableTabHost
	xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/tabhost"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:layout_marginTop="5dip">
	<LinearLayout android:orientation="vertical"
		android:layout_width="match_parent" android:layout_height="match_parent">
		<TabWidget android:id="@android:id/tabs"
			android:layout_width="match_parent" android:layout_height="wrap_content"
			android:background="@null" android:layout_marginLeft="-2dp"
			android:layout_marginRight="-2dp" />
		<FrameLayout android:id="@android:id/tabcontent"
			android:layout_width="match_parent" android:layout_height="0dip"
			android:layout_weight="1">
			<LinearLayout android:layout_width="match_parent"
				android:layout_height="match_parent" android:layout_weight="1"
				android:id="@+id/sleep_history_list">
				<TextView android:id="@+id/text" android:textColor="?android:textColorPrimary"
					android:textSize="17dp" android:text="@string/search_instructions"
					android:layout_width="match_parent" android:layout_height="wrap_content" />
				<ListView android:id="@+id/list" android:layout_width="match_parent"
					android:layout_height="match_parent" android:layout_weight="1"
					android:cacheColorHint="#00000000" android:padding="4dip" />
			</LinearLayout>
			<TableLayout android:layout_height="match_parent"
				android:layout_width="match_parent" android:id="@+id/sleep_history_charts">
				<TableRow android:layout_height="wrap_content"
					android:layout_width="match_parent">
					<TextView android:layout_width="wrap_content"
						android:layout_height="wrap_content" style="@style/TextHeader"
						android:layout_gravity="left|center_vertical" android:id="@+id/header_score_text"
						android:layout_weight="1" android:text="@string/chart_view"></TextView>

					<Spinner android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:id="@+id/sleep_history_chart_type_spinner"
						android:layout_gravity="top|right" android:layout_weight="1"
						android:visibility="invisible"></Spinner>
				</TableRow>
				<com.androsz.electricsleepbeta.widget.DailySleepComparisonChart
					android:id="@+id/chart" android:layout_width="match_parent"
					android:layout_height="match_parent" android:padding="4dip"
					android:layout_gravity="bottom" />
			</TableLayout>
		</FrameLayout>
	</LinearLayout>
</com.androsz.electricsleepbeta.widget.FlingableTabHost>